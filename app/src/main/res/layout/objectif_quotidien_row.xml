<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lobjQ_famille_tv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:textSize="17dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lobjQ_objectif_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lobjQ_famille_tv"
        android:layout_toRightOf="@+id/lobjQ_famille_tv"
        android:layout_toLeftOf="@+id/lobjQ_progressBar2"
        />
    <TextView
        android:id="@+id/lobjQ_realisation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lobjQ_objectif_tv"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/lobjQ_famille_tv"/>
    <TextView
        android:id="@+id/lobjQ_percent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lobjQ_realisation_tv"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/lobjQ_famille_tv"/>

    <com.newtech.newtech_sfm.Configuration.CircularProgressBar
        android:id="@+id/lobjQ_progressBar2"
        style="@style/Widget.ProgressBar.CircularProgressBar"
        android:layout_width="70dip"
        android:layout_height="70dip"
        circular:cpb_subtitle="subtitle"
        circular:cpb_title="Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>