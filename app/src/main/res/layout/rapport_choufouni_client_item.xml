<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout="@layout/rapport_choufouni_client_item">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/is_choufouni_iv"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/is_choufouni_iv"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/client_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLIENT"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tournee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOURNEE"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/adresse_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADRESSE"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/telephone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NUMERO"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/chiffre_affaire_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CA"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nb_image_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMAGE"
                android:textSize="14sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>