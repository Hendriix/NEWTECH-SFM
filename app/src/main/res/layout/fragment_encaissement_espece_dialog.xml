<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.newtech.newtech_sfm.mob_cmd_al.mob_encaissement.MobEncaissementDialogFragment"
    tools:layout="@layout/fragment_encaissement_espece_dialog">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/questionnaire_item_round_corner"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1.5"
                android:padding="5dp"
                android:text=" VALEUR (MAD):"
                android:textColor="@color/secondary"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>


            <EditText
                android:id="@+id/valeur_livraison_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1.5"
                android:background="@color/secondary"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/blanc"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_gravity="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1.5"
                android:padding="5dp"
                android:text=" ENCAISSEMENT (MAD):"
                android:textColor="@color/secondary"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>


            <EditText
                android:id="@+id/montant_encaissement_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1.5"
                android:background="@color/secondary"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/blanc"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_gravity="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/valider_enncaissement_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1.5"
                android:background="@drawable/button_shape"
                android:padding="5dp"
                android:text="Terminer"
                android:textColor="@color/blanc"
                android:textStyle="bold" />

            <Button
                android:id="@+id/annuler_encaissement_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1.5"
                android:background="@drawable/button_shape"
                android:padding="5dp"
                android:text="Annuler"
                android:textColor="@color/blanc"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>