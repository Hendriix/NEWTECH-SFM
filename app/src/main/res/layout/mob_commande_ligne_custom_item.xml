<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="horizontal"
    android:padding="20dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    android:elevation="20dp"
    android:background="@drawable/questionnaire_item_round_corner">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="140dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/article_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:src="@drawable/fpaf0025"
            android:padding="10dp"
            android:contentDescription="questionnaire_iv"/>

        <ImageView
            android:id="@+id/unite_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:src="@drawable/fpaf0025"
            android:padding="10dp"
            android:contentDescription="questionnaire_iv"/>



    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_weight="1.6"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <TextView
            android:id="@+id/article_designation_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Article"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="@font/alegreya_bold"/>

        <TextView
            android:id="@+id/article_code_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:fontFamily="@font/alegreya_bold"
            android:padding="5dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cmd_ligne_numero_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:text="Code ligne"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_bold"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/unite_nom_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Unité"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_bold"
                android:padding="5dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>



        <TextView
            android:id="@+id/article_prix_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:fontFamily="@font/alegreya_bold"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/quantite_commandee_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quentité commandée"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:fontFamily="@font/alegreya_bold"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/quantite_livree_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantité livrée"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:fontFamily="@font/alegreya_bold"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/quantite_reste_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantité reste"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:fontFamily="@font/alegreya_bold"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/valeur_ligne_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valeur"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:fontFamily="@font/alegreya_bold"
            android:padding="5dp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>