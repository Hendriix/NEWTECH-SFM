<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_catalogue_article"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:layout_marginLeft="2dp"
            app:srcCompat="?android:attr/selectableItemBackground"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/article_catalogue_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary"/>

        <TextView
            android:id="@+id/article_catalogue_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_column="1"
            android:layout_row="1" />



        <TextView
            android:id="@+id/prix_article_catalogue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginBottom="10dp"
            android:textColor="@color/primary"
            android:textSize="12sp" />


    </GridLayout>
</LinearLayout>