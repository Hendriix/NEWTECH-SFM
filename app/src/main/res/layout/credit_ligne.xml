<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


                <TextView
                    android:id="@+id/client_nom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_row="0"
                    android:text="TextView1" />

                <TextView
                    android:id="@+id/code_commande"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="23dp"
                    android:layout_row="1"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:text="TextView2" />

                <TextView
                    android:id="@+id/date_credit"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="23dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="TextView3" />


                <TextView
                    android:id="@+id/date_echeance"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_row="2"
                    android:layout_toRightOf="@+id/date_credit"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="TextView5" />



                <TextView
                    android:id="@+id/valeur_credit"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="23dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="TextView6" />


                <TextView
                    android:id="@+id/valeur_payee"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_row="3"
                    android:layout_toRightOf="@+id/valeur_credit"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="TextView7" />

                <TextView
                    android:id="@+id/reste_credit"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="TextView8" />




        </GridLayout>



</RelativeLayout>
