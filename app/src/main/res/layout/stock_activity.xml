<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Load the toolbar here -->
    <include
    layout="@layout/toolbar_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chargement_layout"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/relativelayout_background"
        android:padding="6dip"
        android:layout_marginTop="0.8dp">

        <ImageView
            android:id="@+id/chargement"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:src="@drawable/charge" />

        <TextView
            android:id="@+id/chargement_title"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/chargement"
            android:maxLines="1"
            android:text="Effectuer une demande de chargement"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/chargement_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/chargement_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/chargement"
            android:gravity="center_vertical"
            android:text="Chargement"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dechargement_layout"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/relativelayout_background"
        android:padding="6dip"
        android:layout_marginTop="1dp"
        >

        <ImageView
            android:id="@+id/dechargement"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:src="@drawable/decharge" />

        <TextView
            android:id="@+id/dechargement_title"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/dechargement"
            android:maxLines="1"
            android:text="Effectuer une demande de déchargement"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dechargement_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/dechargement_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/dechargement"
            android:gravity="center_vertical"
            android:text="Déchargement"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/stock_layout"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/relativelayout_background"
        android:padding="6dip"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/stock_consultation"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:src="@drawable/viewstock" />

        <TextView
            android:id="@+id/stock_consultation_title"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/stock_consultation"
            android:maxLines="1"
            android:text="Consulter votre stock"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/stock_consultation_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/stock_consultation_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/stock_consultation"
            android:gravity="center_vertical"
            android:text="Stock"
            android:textSize="16sp" />

    </RelativeLayout>


</LinearLayout>