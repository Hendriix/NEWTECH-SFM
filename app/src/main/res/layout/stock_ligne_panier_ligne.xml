<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="1"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.newtech.newtech_sfm.Activity.StockLigneActivity">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ImageView
            android:id="@+id/image_article"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:layout_marginLeft="2dp"
            app:srcCompat="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/article_designation"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:textSize="15sp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/article_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_column="1"
            android:layout_row="1" />

        <TextView
            android:id="@+id/prix_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <ListView
            android:id="@+id/unite_listview1"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginTop="2dp"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_rowSpan="5"/>

        <!--<android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_rowSpan="4"
            android:id="@+id/recyclerView"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>-->

        <ImageView
            android:id="@+id/caisse_image"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_column="7"
            android:layout_row="2"

            app:srcCompat="@drawable/list_cell_background" />

        <ImageView
            android:id="@+id/bouteille_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="8"
            android:layout_marginRight="10dp"
            android:layout_row="2"

            app:srcCompat="@drawable/list_cell_background" />

        <TextView
            android:id="@+id/quantite_caisse"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_column="7"
            android:layout_row="1"
            android:textSize="15sp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/quantite_unite"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_column="8"
            android:layout_row="1"
            android:textSize="15sp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="3dp"/>

    </GridLayout>
</LinearLayout>